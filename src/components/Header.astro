---
import Logo from './Logo.astro';
import ContactModal from './ContactModal.astro';

const navItems = [
  { name: 'Trang chủ', href: '/' },
  { name: 'Tính năng', href: '/features' },
  { name: 'Lợi ích', href: '/benefits' },
  { name: 'Về chúng tôi', href: '/about' },
];
---

<header class="fixed top-0 left-0 right-0 z-50 bg-black/80 backdrop-blur-sm border-b border-gray-800">
  <nav class="container-custom">
    <div class="flex items-center justify-between h-16">
      <a href="/" class="flex items-center">
        <Logo size="md" showText={true} />
      </a>

      <div class="hidden md:flex items-center space-x-8">
        {navItems.map((item) => (
          <a
            href={item.href}
            class="text-gray-300 hover:text-white transition-colors font-medium"
          >
            {item.name}
          </a>
        ))}
      </div>

      <div class="flex items-center space-x-4">
        <a
          href="/"
          class="md:px-4 md:py-2 text-gray-300 font-medium hover:text-white transition-colors"
        >
          Đăng nhập
        </a>
        <button
          onclick="window.openContactModal && window.openContactModal()"
          class="md:px-6 px-3 py-1.5 md:py-2 bg-gradient-to-r from-blue-500 to-purple-600 text-white rounded-lg font-medium hover:from-blue-600 hover:to-purple-700 transition-all shadow-lg shadow-purple-500/50 cursor-pointer"
        >
          Bắt đầu miễn phí
        </button>
      </div>
    </div>
  </nav>
  <ContactModal />
</header>

